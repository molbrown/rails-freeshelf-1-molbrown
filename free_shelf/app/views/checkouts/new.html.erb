<div class='container'>
<h1 class='my-3'>Add this Book to Reading List?</h1>

<div class='row'>
<div class='col'>
<%= form_for(@checkout) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :book_id, value: @book.id %>
    <button class="btn btn-primary w-50" type="submit">Confirm</button>
<% end %>
</div>
<div class='col'>
<div class="font-weight-light"><%= @book.title %></div>
<div class="font-weight-light">By: <%= @book.author.name%></div>
</div>
</div>

<%= link_to 'Home', books_path, class: "btn btn-outline-primary" %>
</div>
</div>

