<h1>Welcome to FreeShelf</h1>
<h2>A library of online programming books, available for free</h2>

<%= link_to 'Add a Book', new_book_path, class: "btn btn-outline-primary" %>

<table>
    <thead>
        <tr>
            <th>Book</th>
            <th><%= link_to 'Authors', authors_path, class: "btn btn-outline-secondary" %></th>
            <th>Language</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author.name %></td>
                <td><%= book.language %></td>
                <td><%= link_to 'View Details', book_path(book), class: "btn btn-outline-primary" %></td>
            </tr>
        <% end %>
    </tbody>
</table>