<%= form_for(@book) do |f| %>
    <div class="input-field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="input-field">
        <%= f.label :author %>
        <%= f.collection_select(:author_id, Author.all, :id, :name) %>
    </div>
    <div class="input-field">
        <%= f.label :language %>
        <%= f.text_field :language %>
    </div>
    <div class="input-field">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div class="input-field">
        <%= f.label :url %>
        <%= f.text_field :url %>
    </div>
    <button type="submit">Save Book</button>
<% end %>