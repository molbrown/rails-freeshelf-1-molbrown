<h1><%= @book.title %></h1>

<div>Author: <%= @book.author.name %></div>
<div>Language: <%= @book.language %></div>
<div>Description: <%= @book.description %></div>
<div>Link: <%= @book.url %></div>

<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-outline-primary" %>
<%= link_to 'Delete', book_path(@book), class: "btn btn-outline-primary", method: :delete, data: { confirm: 'Are you sure?' } %> %>

<%= link_to 'Home', books_path, class: "btn btn-outline-primary" %>
