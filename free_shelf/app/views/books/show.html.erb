<div class="container">
<h1 class='my-3'><%= @book.title %></h1>
<%= link_to 'Add to my Reading List', new_checkout_path(book_id: @book.id), class: "btn btn-primary my-4" %>
<div class='row'>
<div class='col-4'>
<div>Author: <%= @book.author.name %></div>
<div>Language: <%= @book.language %></div>
</div>
<div class='col-8'>
<div class='my-2'>Description: <%= @book.description %></div>
<div class='m-2'>Link: <%= @book.url %></div>

<%= link_to 'Edit', edit_book_path(@book), class: "btn btn-outline-primary" %>
<%= link_to 'Delete', book_path(@book), class: "btn btn-outline-primary", method: :delete %>
</div>
</div>
<%= link_to 'Home', books_path, class: "btn btn-outline-secondary" %>
</div>
